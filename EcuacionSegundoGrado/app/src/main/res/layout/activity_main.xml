<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resolver ecuaciones de segundo grado" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos:" />

        <EditText
            android:id="@+id/xet1"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:hint="a"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/xet2"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:hint="b"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/xet3"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:hint="c"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/xbt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular"/>

        <TextView
            android:id="@+id/xtv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
</ScrollView>